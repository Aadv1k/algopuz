{
  "plugins": ["prettier"],
  "extends": ["prettier"],

  "parserOptions": {
    "ecmaVersion": 2020
  },

  "env": {
    "node": true,
    "jest": true
  },

  "rules": {
    "prettier/prettier": "error",
    "no-extra-parens": "warn",
    "no-extra-semi": "warn",
    "semi": ["warn", "always"],

    "prefer-const": ["error", { "destructuring": "any" }]
  }
}
